.intro
	margin 5rem auto
	
	&__hed
		max-width $column-width
		margin 0 auto 2rem auto
		padding 0 1rem
		font-weight bold
		set-type-size('x-large', true)
		+mq('bp-2')
			set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xx-large', true)
	
	&__info
		max-width $column-width
		margin 0 auto
		padding 0 1rem
		display flex
		justify-content space-between
		p 
			set-type-size('small', true)
			margin 0
		
	&__byline
		text-align left
	&__dek
		text-align right
		
	