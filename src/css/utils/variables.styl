// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-1: '(min-width: 25em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 50em)'
    bp-4: '(min-width: 60em)'
}

// -------------------
// Typefaces
// -------------------
$canela = 'Canela Web'
$canela-hash = 'canela'
$publico = 'Publico Text Web'
$publico-hash = 'publico'
$atlas = 'Atlas Grotesk Web'
$atlas-hash = 'atlas'

$sans = $atlas, Helvetica, Arial, sans-serif
$serif = $publico, Georgia, Times, serif
$mono = Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$off-black = #2a2a2a
$gray-dark = #666
$gray = #999
$gray-light = #ccc
$off-white = #efefef
$primary= #f06

$column-width = 40rem

