$root-size = 18px

$type-size = {
    xxx-small: {
        size: 10px,
        line-height: 1.5
    }
    xx-small: {
        size: 12px,
        line-height: 1.5
    }
    x-small: {
        size: 14px,
        line-height: 1.5    
    }
    small: {
        size: 16px,
        line-height: 1.5
    }
    medium: {
        size: $root-size,
        line-height: 1.7
    }
    large: {
        size: 24px,
        line-height: 1.5
    }
    x-large: {
        size: 32px,
        line-height: 1.2
    }
    xx-large: {
        size: 48px,
        line-height: 1.2
    }
    xxx-large: {
        size: 64px,
        line-height: 1.2
    }
}
